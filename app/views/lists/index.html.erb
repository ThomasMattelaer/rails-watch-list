<div class="banner">
  <h1>All movies</h1>
</div>
<div class="cards">
  <% @lists.each do |list| %>
<div class="card" style="background-image: linear-gradient(to bottom, rgba(0,0,0,0.5), rgba(0,0,0,0.5)),
  url('https://source.unsplash.com/random/?movies')";>
    <p><%=link_to list.name, list_path(list)%></p>
</div>
  <% end %>
</div>

<%= link_to "Create a new list", new_list_path %>
